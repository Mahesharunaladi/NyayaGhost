# NyayaGhost Environment Configuration
# Copy this file to .env and fill in your actual values

# Server Configuration
NODE_ENV=development
PORT=3000

# Database Configuration (when implemented)
DB_HOST=localhost
DB_PORT=5432
DB_NAME=nyayaghost
DB_USER=your_db_user
DB_PASSWORD=your_db_password

# MongoDB (alternative)
MONGODB_URI=mongodb://localhost:27017/nyayaghost

# AI Service API Keys
OPENAI_API_KEY=your_openai_key_here
GOOGLE_GEMINI_API_KEY=your_gemini_key_here

# Government API Integrations
MYSCHEME_API_KEY=your_myscheme_api_key
ECOURTS_API_KEY=your_ecourts_api_key
AADHAAR_API_KEY=your_aadhaar_ekyc_key

# SMS/Notification Services
TWILIO_ACCOUNT_SID=your_twilio_sid
TWILIO_AUTH_TOKEN=your_twilio_token
TWILIO_PHONE_NUMBER=+1234567890

# File Storage
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_S3_BUCKET=nyayaghost-documents
AWS_REGION=ap-south-1

# Security
JWT_SECRET=your_jwt_secret_here_minimum_32_chars
ENCRYPTION_KEY=your_encryption_key_here

# Monitoring & Analytics
SENTRY_DSN=your_sentry_dsn_for_error_tracking
GOOGLE_ANALYTICS_ID=UA-XXXXX-Y

# Feature Flags
ENABLE_AADHAAR_SCAN=false
ENABLE_AI_FILING=false
ENABLE_SMS_NOTIFICATIONS=false

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# CORS Configuration
ALLOWED_ORIGINS=http://localhost:8080,https://yourdomain.com

# Logging
LOG_LEVEL=info
